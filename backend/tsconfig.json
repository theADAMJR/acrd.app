{
  "compileOnSave": true,
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["ES2020", "ES2019"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "skipLibCheck": true,
    "watch": true,
  },
  "include": ["src", "env"]
}